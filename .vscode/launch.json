    "version": "0.2.0",
    "configurations": [
        {
            "name": "RecordVideo debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/RecordVideo",
            "args": [
                "/dev/video0",
                "sh264"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", // Linux/macOS下为gdb路径，Windows下为gdb.exe路径
            "preLaunchTask": "build-debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}